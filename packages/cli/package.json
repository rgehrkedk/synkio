{
  "name": "synkio",
  "version": "1.1.0",
  "description": "Sync Figma variables to design tokens with breaking change protection",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "synkio": "dist/cli/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rgehrkedk/synkio.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/rgehrkedk/synkio#readme",
  "bugs": {
    "url": "https://github.com/rgehrkedk/synkio/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "USER_GUIDE.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli/bin.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "docs": "node dist/cli/bin.js docs",
    "docs:serve": "node dist/cli/bin.js docs && npx serve .synkio/docs"
  },
  "keywords": [
    "figma",
    "design-tokens",
    "design-system",
    "sync",
    "cli"
  ],
  "author": "Synkio",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "dotenv": "^17.2.3",
    "ora": "^8.0.0",
    "p-retry": "^7.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "style-dictionary": "^5.1.1",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "style-dictionary": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "style-dictionary": {
      "optional": true
    }
  }
}
