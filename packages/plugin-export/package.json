{
  "name": "token-vault",
  "version": "2.0.0",
  "description": "Import, export, and sync design tokens to Figma Variables",
  "scripts": {
    "build": "npm run build:js && npm run build:manifest",
    "build:js": "esbuild src/code.ts --bundle --outfile=code.js --target=es2017",
    "build:manifest": "cp manifest.json dist/ 2>/dev/null || true",
    "watch": "esbuild src/code.ts --bundle --outfile=code.js --target=es2017 --watch"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "glob": "^13.0.0"
  }
}
