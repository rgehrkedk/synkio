{
  "name": "token-vault",
  "version": "2.0.0",
  "description": "Import, export, and sync design tokens to Figma Variables",
  "scripts": {
    "build": "node scripts/build.js",
    "build:backend": "esbuild src/code.ts --bundle --outfile=code.js --target=es2017 --format=esm --sourcemap",
    "build:ui": "node scripts/build-ui.js",
    "build:manifest": "cp manifest.json dist/ 2>/dev/null || mkdir -p dist && cp manifest.json dist/",
    "watch": "esbuild src/code.ts --bundle --outfile=code.js --target=es2017 --format=esm --sourcemap --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "@vitest/ui": "^1.0.0",
    "esbuild": "^0.19.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "glob": "^13.0.0"
  }
}
