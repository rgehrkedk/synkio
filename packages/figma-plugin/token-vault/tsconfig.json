{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/code.ts", "src/backend/**/*", "src/types/**/*"],
  "exclude": ["src/ui/**/*", "tests/**/*"]
}
