{
  "name": "figma-token-sync-plugin",
  "version": "1.0.0",
  "description": "Figma plugin for bidirectional design token sync (import and export)",
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "node bundle.js",
    "watch": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:export": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=export\\.test",
    "test:export-ui": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=export-ui",
    "test:tabs": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=tabs",
    "test:import": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=import\\.test"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.98.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.3.3"
  }
}
