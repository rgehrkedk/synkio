{
  "version": "1.0.0",
  "figma": {
    "fileId": "2v7lEGTB8CgFbYmawBETjG",
    "accessToken": "${FIGMA_TOKEN}"
  },
  "output": {
    "dir": "src/tokens-css/tokens",
    "format": "json",
    "mode": "json"
  },
  "css": {
    "enabled": true,
    "dir": "src/tokens-css/styles",
    "file": "tokens.css",
    "utilities": true,
    "transforms": {
      "useRem": true,
      "basePxFontSize": 16
    }
  },
  "docs": {
    "enabled": true,
    "dir": ".synkio/docs-css",
    "title": "Design Tokens (CSS Mode)"
  },
  "collections": {
    "theme": {
      "dir": "src/tokens-css/tokens/themes",
      "file": "theme",
      "splitModes": true
    },
    "colors": {
      "dir": "src/tokens-css/tokens/colors",
      "file": "colors",
      "splitModes": false
    },
    "primitives": {
      "dir": "src/tokens-css/tokens/primitives",
      "file": "primitives",
      "splitModes": false
    },
    "typography": {
      "dir": "src/tokens-css/tokens/typography",
      "file": "typography",
      "splitModes": true
    }
  }
}
