{
  "version": "1.0.0",
  "figma": {
    "fileId": "2v7lEGTB8CgFbYmawBETjG",
    "accessToken": "${FIGMA_TOKEN}"
  },
  "output": {
    "dir": "src/tokens-mobile/tokens",
    "format": "json",
    "mode": "style-dictionary",
    "styleDictionary": {
      "buildPath": "src/tokens-mobile/platforms/",
      "platforms": {
        "ios-swift": {
          "transformGroup": "ios-swift",
          "buildPath": "src/tokens-mobile/platforms/ios/",
          "files": [
            {
              "destination": "Tokens.swift",
              "format": "ios-swift/class.swift",
              "className": "DesignTokens"
            }
          ]
        },
        "android": {
          "transformGroup": "android",
          "buildPath": "src/tokens-mobile/platforms/android/",
          "files": [
            {
              "destination": "tokens.xml",
              "format": "android/resources"
            }
          ]
        },
        "flutter": {
          "transformGroup": "flutter",
          "buildPath": "src/tokens-mobile/platforms/flutter/",
          "files": [
            {
              "destination": "tokens.dart",
              "format": "flutter/class.dart",
              "className": "DesignTokens"
            }
          ]
        }
      }
    }
  },
  "docs": {
    "enabled": true,
    "dir": ".synkio/docs-mobile",
    "title": "Design Tokens (Mobile Platforms)"
  },
  "collections": {
    "theme": {
      "dir": "src/tokens-mobile/tokens/themes",
      "file": "theme",
      "splitModes": true
    },
    "colors": {
      "dir": "src/tokens-mobile/tokens/colors",
      "file": "colors",
      "splitModes": false
    },
    "primitives": {
      "dir": "src/tokens-mobile/tokens/primitives",
      "file": "primitives",
      "splitModes": false
    },
    "typography": {
      "dir": "src/tokens-mobile/tokens/typography",
      "file": "typography",
      "splitModes": true
    }
  }
}
