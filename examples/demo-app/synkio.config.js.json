{
  "version": "1.0.0",
  "figma": {
    "fileId": "2v7lEGTB8CgFbYmawBETjG",
    "accessToken": "${FIGMA_TOKEN}"
  },
  "output": {
    "dir": "src/tokens-js/tokens",
    "format": "json",
    "mode": "style-dictionary",
    "styleDictionary": {
      "buildPath": "src/tokens-js/",
      "platforms": {
        "js": {
          "transformGroup": "js",
          "buildPath": "src/tokens-js/",
          "files": [
            {
              "destination": "tokens.js",
              "format": "javascript/module-flat",
              "options": {
                "outputReferences": true
              }
            },
            {
              "destination": "theme.js",
              "format": "javascript/object",
              "options": {
                "outputReferences": true
              }
            }
          ]
        },
        "ts": {
          "transformGroup": "js",
          "buildPath": "src/tokens-js/",
          "files": [
            {
              "destination": "tokens.d.ts",
              "format": "typescript/module-declarations"
            }
          ]
        },
        "json": {
          "transformGroup": "js",
          "buildPath": "src/tokens-js/",
          "files": [
            {
              "destination": "tokens.json",
              "format": "json/nested"
            }
          ]
        }
      }
    }
  },
  "docs": {
    "enabled": true,
    "dir": ".synkio/docs-js",
    "title": "Design Tokens (CSS-in-JS)"
  },
  "collections": {
    "theme": {
      "dir": "src/tokens-js/tokens/themes",
      "file": "theme",
      "splitModes": true
    },
    "colors": {
      "dir": "src/tokens-js/tokens/colors",
      "file": "colors",
      "splitModes": false
    },
    "primitives": {
      "dir": "src/tokens-js/tokens/primitives",
      "file": "primitives",
      "splitModes": false
    },
    "typography": {
      "dir": "src/tokens-js/tokens/typography",
      "file": "typography",
      "splitModes": true
    }
  }
}
